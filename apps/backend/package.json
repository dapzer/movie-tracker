{
  "name": "backend",
  "private": true,
  "scripts": {
    "dev": "nest start --watch --preserveWatchOutput",
    "build": "nest build",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --max-old-space-size=4096 dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prestart:prod": "pnpm --filter=database run migrate"
  },
  "dependencies": {
    "@movie-tracker/database": "workspace:*",
    "@movie-tracker/email-templates": "workspace:*",
    "@movie-tracker/types": "workspace:*",
    "@movie-tracker/utils": "workspace:*",
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/cache-manager": "2.2.2",
    "@nestjs/common": "10.4.1",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/schedule": "4.1.1",
    "@nestjs/swagger": "7.4.0",
    "@nestjs/throttler": "5.1.2",
    "@paralleldrive/cuid2": "2.2.2",
    "@quixo3/prisma-session-store": "3.1.13",
    "@react-email/render": "0.0.15",
    "@types/nodemailer": "6.4.15",
    "bcrypt": "5.1.1",
    "cache-manager": "5.6.1",
    "cache-manager-redis-yet": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.6",
    "dotenv": "16.4.5",
    "express-session": "1.18.0",
    "nestjs-throttler-storage-redis": "0.4.4",
    "nodemailer": "6.9.15",
    "redis": "4.7.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "satori": "0.10.14",
    "sharp": "0.33.5",
    "sitemap": "8.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.2",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.3.10",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.7",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/jest": "29.5.12",
    "@types/node": "22.1.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "prettier": "3.3.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.4",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
